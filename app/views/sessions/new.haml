- provide :title, "Sign In"
%h1 Sign in
.row
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|
      %p
        Email
        \#{f.text_field :email}
      %p
        Password
        %span#forgot-password= link_to "forgot your password?", new_password_reset_path
        = f.password_field :password
      %p
        Keep me logged in #{f.check_box :remember_me}
      %p= f.submit "Sign In", class: "btn btn-large btn-primary"
    %p
      New user? #{link_to "SIGN UP", signup_path}
