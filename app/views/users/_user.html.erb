<li>
  <%= avatar_for user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
     <%= link_to trash_can_icon, user,
                                 method: :delete,
                                 data: { confirm: "Are you sure?" },
                                 class: "delete-item"%>
  <% end %>
</li>
