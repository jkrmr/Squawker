<li id="<%= feed_item.id %>" class="group">
  <div class="micropost-gravatar">
    <%= link_to gravatar_for(feed_item.user, {size: 35}), feed_item.user %>
  </div>

  <div class="micropost-content">
    <span class="user"><%= link_to feed_item.user.name, feed_item.user %></span>
    <span class="timestamp"><%= time_ago_in_words(feed_item.created_at) %> ago</span>
    <span class="text"><%= feed_item.content %>
      <% if current_user?(feed_item.user) %>
      <%= link_to trash_can_icon, feed_item, method: :delete,
                                             data: { confirm: "Are you sure?" },
                                             title: feed_item.content %>
      <% end %>
    </span>
  </div>


</li>